{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://CICBO.com/alarm.json",
  "type": "object",
  "title": "Alarm Schema",
  "description": "See https://github.com/lipilli/CICBO/blob/api-spec/specs/api.yaml",
  "examples": [
    {
      "type": "guest",
      "sortByName": true,
      "firstName": "Max",
      "name": "Mastermind",
      "arrivedAt": "2020-10-22 04:20",
      "leftAt": "2020-10-22 04:20"
    }
  ],
  "required": [
    "type",
    "sortByName",
    "firstName",
    "name",
    "arrivedAt",
    "leftAt"
  ],
  "properties": {
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "examples": [
        "guest",
        "staff"
      ],
      "pattern": "staff|guest"
    },
    "sortByName": {
      "$id": "#/properties/sortByName",
      "type": "boolean"
    },
    "firstName": {
      "$id": "#/properties/firstName",
      "type": "string",
      "title": "The firstName schema"
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string"
    },
    "arrivedAt": {
      "$id": "#/properties/arrivedAt",
      "type": "string",
      "pattern": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
    },
    "leftAt": {
      "$id": "#/properties/leftAt",
      "type": "string",
      "pattern": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
    }
  },
  "additionalProperties": false
}
