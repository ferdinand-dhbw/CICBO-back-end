{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://CICBO.com/staff.json",
  "title": "Staff Schema",
  "type": "object",
  "required": [
    "firstName",
    "name"
  ],
  "properties": {
    "firstName": {
      "$id": "#root/firstName",
      "title": "Firstname",
      "type": "string",
      "default": "",
      "examples": [
        "Jane"
      ],
      "pattern": "^.*$"
    },
    "name": {
      "$id": "#root/name",
      "title": "Name",
      "type": "string",
      "default": "",
      "examples": [
        "Doe"
      ],
      "pattern": "^.*$"
    },
    "mail": {
      "$id": "#root/mail",
      "title": "Mail",
      "type": "string",
      "default": "",
      "examples": [
        "jane.doe@example.com"
      ],
      "pattern": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
    },
    "phone": {
      "$id": "#root/phone",
      "title": "Phone",
      "type": "string",
      "default": "",
      "examples": [
        "string"
      ],
      "pattern": "^.*$"
    },
    "address": {
      "$id": "#root/address",
      "title": "Address",
      "type": "string",
      "default": "",
      "examples": [
        "string"
      ],
      "pattern": "^.*$"
    }
  },
  "additionalProperties": false
}
